  email = alfredormz@gmail.com
[color]
  ui = auto
[alias]
  st = status --short
  ci = commit
  co = checkout
  cob = checkout -b
  b = branch
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  f = fetch
  fa = fetch --all
  pom = push origin master
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  r = rebase

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  re = !git l -30
  ra = !git re --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
[help]
	autocorrect = 1
